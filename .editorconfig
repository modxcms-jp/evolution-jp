# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.php, *.php.sample]
trim_trailing_whitespace = true

[*.html.php]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.js]
indent_size = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 2
trim_trailing_whitespace = true

[*.scss]
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = true
